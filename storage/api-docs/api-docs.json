        },
        "/kpideclientes": {
            "get": {
                "tags": [
                    "performance"
                ],
                "description": "Promedio y desviaci칩n est치ndar de las edades de los clientes",
                "operationId": "App\\Http\\Controllers\\PerformanceController::index",
                "responses": {
                    "200": {
                        "description": "KPIs de todos los clientes"
                    }
                }
            }
        },
        "/": {
            "get": {
                "description": "Home page",
                "operationId": "createUser",
                "responses": {
                    "200": {
                        "description": "Welcome page"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ApiResponse": {
                "description": "Response entity, response result uses this structure uniformly",
                "properties": {
                    "code": {
                        "description": "response code",
                        "type": "string"
                    },
                    "message": {
                        "description": "response result prompt",
                        "type": "string"
                    }
                },
                "type": "object"
            }
        }
    }
